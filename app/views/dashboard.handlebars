                <textarea id="paragraphId" class="form-blog-paragraph form-control" cols="30" rows="5" type="text" name="paragraph">
                    {{ blog.paragraph }}
                </textarea>
            </div>
        </div>
        <div class="row create-blog-row">
            <div class="col create-blog-div">
                <button id="submitId" class="form-blog-submit" type="submit" name="submit">Submit</button>

