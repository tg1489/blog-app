{{!-- Navbar --}}
<nav class="navbar navbar-expand-lg">
    <a id="title" class="navbar-brand" href="/home">Blog App</a>
    <button class="navbar-toggler" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarNav" 
            aria-controls="navbarNav" 
            aria-expanded="false"
            aria-label="Toggle navigation">
        <span class="navbar-toggler-icon mobile-button-fix"></span>
    </button>

{{!-- Navbar List Items --}}
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">{{ username }}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
            </li>
        </ul>
    </div>
</nav>


{{!-- Blog Title --}}
<h1 class="mt-5 mb-5">{{serializedBlogs.title}} and ID: {{serializedBlogs.id}}</h1>

{{!-- Blog Paragraph --}}
<div class="container">
    <div class="row">
        <div class="col">
            <p class="blog-paragraph append-comment">{{serializedBlogs.paragraph}}</p>
        </div>
    </div>
</div>

{{!-- Leave Comment Button --}}
<div class="container mb-4">
    <div class="row">
        <div class="col">
            <div class="leave-comment btn-open-modal" type="button" data-bs-toggle="modal" data-bs-target="#myModal">Leave Comment</div>
        </div>
    </div>
</div>



{{!-- Blog Comments --}}
<div class="container comments-border">
  <div class="row">
    <div class="col">
      {{#each serializedBlogs.comments as |comment|}}
        <span class="blogComments">{{comment.user}}: {{comment.body}}<div></div>
      {{/each}}
    </div>
  </div>
</div>










<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="enter-comment modal-title">Enter Comment</h5>
        <button type="button" class="close xButton" data-dismiss="modal" aria-label="Close">
          <span class="x" aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{!-- Text --}}
        <input id="comment" name="comment" type="text" data-id="{{serializedBlogs.id}}">

      </div>
      <div class="modal-footer">
        <button id="comment-save" type="button" class="btn btn-primary save">Save changes</button>
        <button type="button" class="btn btn-secondary comment-close" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>