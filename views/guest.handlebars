{{!-- Existing Blogs --}}
<div class="container existing-blogs">
  {{!-- Row --}}
  <div class="row blog-center mt-4 mb-4">
    
   {{!-- Column --}}
{{#each serializedBlogs as |blog|}}
<div class="col blog insert-new-comment" data-blog-id="{{blog.id}}">
    <p>Blog.id 1st: {{blog.id}}</p>
    <p class="username">Dynamic Username: {{blog.user}} <br><br><span id="title-date">{{blog.title}} | {{blog.date}} </span></p>
    <p class="blog-paragraph append-comment">{{blog.paragraph}}</p>

    {{!-- Comments --}}
    {{#each (lookup blog 'comments') as |comment|}}
      <p id="{{blog.id}}" class="p-4 blog-paragraph comment insert-comment">{{comment.user}} - {{comment.body}} Blog ID:{{comment.blogId}}</p>
    {{/each}}

    <div class="leave-comment btn-open-modal" type="button" data-bs-toggle="modal" data-bs-target="#myModal">Leave Comment</div>
  </div>
{{/each}}


  </div>
</div>







        {{!-- Login Message --}}
        <div class="col mb-4 login-message d-flex justify-content-center align-items-center mt-3">
            <h2 class="login-alert">Please <a class="fancy" href="/login">Login</a> or <a class="fancy" href="/register">Sign-Up.</a></h2>
        </div>
    </div>
</div>



{{!-- LOGIN Process --}}

<div class="container login">
    <div class="row d-flex justify-content-center align-items-center flex-column login-row">
        <div class="col mb-5 mt-2"><h1>Login</h1></div>
        <form id="login-form">
            Username:
            <div class="col"><input id="login-username" class="mb-4" type="text"></div>
            Password:
            <div class="col d-flex"><input id="login-password" class="mb-3" type="password"></div>
            <button id="login-button">Login</button>
        </form>
        <br>
        <center>
<span id="signup-alert">Don't have an account?</span> <a id="signup" href="/register">Sign up here</a>
</center>
    </div>
</div>


<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">Login Required</h5>
        <button id="outerXButton" type="button" class="close close-button" data-dismiss="modal" aria-label="Close">
          <span id="xButton" aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>You must be logged in to perform this action.</p>
      </div>
      <div class="modal-footer">
        <button id="close-button" type="button" class="btn btn-secondary close-button" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>